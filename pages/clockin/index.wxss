/**index.wxss**/
.clockin-container {
  width: 750rpx;
  height: 100vh;
}

.time {
  width: 100%;
  padding-top: 5vh;
  display: flex;
  justify-content: center;
  height: 20vh;
}

.clockin {
  width: 100%;
  height: 30vh;
  margin-top: 10vh;
  display: flex;
  justify-content: space-around;
}

.wake {
  width: 240rpx;
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: rgb(6, 168, 245);
  color: #333;
}

.sleep {
  width: 240rpx;
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: rgb(6, 168, 245);
  color: #333;
}

.sleep.weui-btn, .wake.weui-btn {
  margin-top: 0;
}

